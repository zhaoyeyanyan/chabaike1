<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/home_fg_lv_item_iv"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@mipmap/ic_launcher" />

       <TextView
        android:id="@+id/home_fg_lv_item_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/home_fg_lv_item_iv"
        android:background="@null"
        android:ellipsize="end"
        android:lines="4"
        android:text="多地出台整合城乡居民医保方案 个人缴费提高 《每日经济新闻》记者注意到，年初国务院发布的《关于整合城乡居民基本医疗保险制度的意见》中明确，         合理划分政府与个人的筹资责任，在提高政府补助标准的同时，适当提高个人缴费比重" />

    <TextView
        android:id="@+id/home_fg_lv_item_tv_rc"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="#f40909"
        android:layout_below="@id/home_fg_lv_item_tv_desc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/home_fg_lv_item_iv"
        android:text="阅读数:22" />

    <TextView
        android:id="@+id/home_fg_lv_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/home_fg_lv_item_tv_desc"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/home_fg_lv_item_tv_rc"
        android:gravity="right|center_vertical"
        android:paddingRight="5dp"
        android:text="20160621666666" />


</RelativeLayout>



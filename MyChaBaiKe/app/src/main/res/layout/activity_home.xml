<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:orientation="vertical"
    android:id="@+id/home_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/home_fg_tab"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/home_fg_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="right"
        android:background="#f6f9f8"
        android:layout_width="300dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <View
                    android:background="#07dc35"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="收藏夹"
                    android:gravity="center_vertical"
                    android:background="#c7cccc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <Button
                android:text="收藏夹"
                android:onClick="onClick"
                android:gravity="left|center_vertical"
                android:textSize="18sp"
                android:id="@+id/home_activity_collection"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="?attr/actionBarSize" />
            <View
                android:background="#1f80ed"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
            <Button
                android:text="浏览记录"
                android:textSize="18sp"
                android:onClick="onClick"
                android:gravity="left|center_vertical"
                android:id="@+id/home_activity_look"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="?attr/actionBarSize" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <View
                    android:background="#07dc35"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="关于客户端"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:background="#c7cccc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <Button
                android:text="版本信息"
                android:onClick="onClick"
                android:textSize="18sp"
                android:id="@+id/home_activity_banben"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:gravity="left|center_vertical"
                android:layout_height="?attr/actionBarSize" />
            <View
                android:background="#1f80ed"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
            <Button
                android:text="意见反馈"
                android:onClick="onClick"
                android:gravity="left|center_vertical"
                android:textSize="18sp"
                android:id="@+id/home_activity_public"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="?attr/actionBarSize" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>